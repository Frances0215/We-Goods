<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_3">
    <LinearLayout
        android:id="@+id/id_ll_header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_img_back"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="12.5pt"
            android:text="我的资料"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_ll_change1"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:orientation="vertical"
        android:layout_below="@+id/id_ll_header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_own"
            android:layout_weight="1">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="12.5pt"
                android:gravity="center"
                android:text="昵称"/>
            <EditText
                android:id="@+id/id_et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_own"
                android:hint=" 请输入昵称"
                android:text=""
                android:textSize="12pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_own"
            android:layout_weight="1">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="12.5pt"
                android:gravity="center"
                android:text="性别"/>
            <EditText
                android:id="@+id/id_et_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_own"
                android:hint=" 请输入性别"
                android:text=""
                android:textSize="12pt" />
<!--            <RadioButton
                android:id="@+id/id_rb_man"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_own"
                android:layout_weight="1"
                android:text="男"
                android:textSize="13pt" />
            <RadioButton
                android:id="@+id/id_rb_woman"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="女"
                android:textSize="13pt"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_own"
            android:layout_weight="1">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="12.5pt"
                android:gravity="center"
                android:text="年龄"/>
            <EditText
                android:id="@+id/id_et_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_own"
                android:hint=" 请输入年龄"
                android:text=""
                android:textSize="12pt" />
         </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_own"
        android:layout_weight="1">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="12.5pt"
                android:gravity="center"
                android:text="星座"/>
            <EditText
                android:id="@+id/id_et_sign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_own"
                android:hint=" 请输入星座"
                android:text=""
                android:textSize="12pt" />

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_own"
        android:orientation="horizontal"
        android:layout_weight="1">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="12.5pt"
                android:gravity="center"
                android:text="职业"/>
            <EditText
                android:id="@+id/id_et_job"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_own"
                android:hint=" 请输入职业"
                android:text=""
                android:textSize="12pt"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_ll_change2"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/id_ll_change1"
        android:background="@drawable/background_own">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_own"
            android:layout_weight="1">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="12.5pt"
                android:gravity="center"
                android:text="身高"/>
            <EditText
                android:id="@+id/id_et_height"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_own"
                android:hint=" 请输入身高 (cm)"
                android:textSize="12pt"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_own"
            android:layout_weight="1">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="12.5pt"
                android:gravity="center"
                android:text="体重"/>
            <EditText
                android:id="@+id/id_et_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_own"
                android:hint=" 请输入体重 (kg)"
                android:textSize="12pt"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/id_tv_submit"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/id_ll_change2"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="13pt"
        android:text="更改资料"
        android:textColor="@color/white"
        android:background="@drawable/background_submit"/>

</RelativeLayout>